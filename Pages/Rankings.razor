@page "/rankings"
@inject HttpClient Http

<h1>Rankings</h1>

<p>This page shows the overall ELO rankings for all teams registered with Scottish Hockey.</p>

@if (teams == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Team Name</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @{int rank = 1;}
            @foreach (var team in teams)
            {
                <tr>
                    <td>@rank</td>
                    <td>@team.TeamName</td>
                    <td>@team.Rating</td>
                </tr>
                rank = rank + 1;
            }
        </tbody>
    </table>
}

@code {
    private Team[] teams;

    protected override async Task OnInitializedAsync()
    {
        teams = await Http.GetFromJsonAsync<Team[]>("sample-data/teams.json");
    }

    public class Team
    {
        public string TeamName { get; set; }

        public int Rating { get; set; }
    }
}
